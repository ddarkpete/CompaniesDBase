    <div class="col-md-4">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h2 class="panel-title">Change Company</h2>
            </div>

            <div class="panel-body">
                <form class="form-horizontal" id="changeForm" data-bind="">
                    <div class="form-group" data-bind="">



                        <div class="col-md-12">
                            <label for="inputComanyName" class="control-label">Comapny Name</label>
                            <input type="text" class="form-control" id="inputCompanyName" data-bind="value: detail().CompanyName" />
                        </div>
                        <br />

                        <div class="col-md-12">
                            <label for="inputNIPNumber" class="control-label">NIP</label>
                            <input type="text" class="form-control" id="inputNIPNumber" data-bind="value: detail().NIPNumber " />
                        </div>
                        <br />

                        <div class="col-md-12">
                            <label for="inputKRSNumber" class="control-label">KRS</label>
                            <input type="text" class="form-control" id="inputKRSNumber" data-bind="value: detail().KRSNumber" />
                        </div>
                        <br />

                        <div class="col-md-12">
                            <label for="inputREGONNumber" class="control-label">REGON</label>
                            <input type="text" step="any" class="form-control" id="inputREGONNumber" data-bind="value: detail().REGONNumber" />
                        </div>
                    </div>
                    <button type="submit" class="btn btn-default">Submit</button>
                </form>
