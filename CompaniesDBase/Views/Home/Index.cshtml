@section scripts {
    @Scripts.Render("~/bundles/app")
}

<div class="page-header">
    <h1>Companies Data Base</h1>
</div>

<div class="row">

  
    <div class="col-md-6">
        <label>Keyword</label>
        <form data-bind="submit: searchCompany">
            <input type="text" id="searchQuery"  />
            <select id="searchPropDropdown">
                <option value="dupa">ID</option>
                <option value="Name">Name</option>
                <option value="NIPNumber">NIP</option>
                <option value="KRSNumber">KRS</option>
                <option value="REGONNumber">REGON</option>
            </select>
            <button type="submit" class="btn btn-default">Search</button>
        </form>
        <div class="panel panel-default">
            <div class="panel-heading">
                <h2 class="panel-title">Companies</h2>
            </div>
            
            
            
            <div class="panel-body" id="companieslist">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>NIP</th>
                            <th>KRS</th>
                            <th>REGON</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody data-bind="foreach: companies">
                        <tr>
                            <td data-bind="text: CompanyName"></td>
                            <td data-bind="text: NIPNumber"></td>
                            <td data-bind="text: KRSNumber"></td>
                            <td data-bind="text: REGONNumber"></td>
                            <td><a href="#" data-bind="click: $parent.delCompany">Delete</a></td>
                            <td><a href="#" data-bind="click: $parent.getCompanyDetail">Change</a></td>
                        </tr>
                    </tbody>
                    
                </table>
            </div>

        </div>
        <div class="alert alert-danger" data-bind="visible: error"><p data-bind="text: error"></p></div>
    </div>

