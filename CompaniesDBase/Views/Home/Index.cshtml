    <div class="col-md-4">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h2 class="panel-title">Add Company</h2>
            </div>

            <div class="panel-body">
                <form class="form-horizontal" id="addForm" data-bind="submit: addCompany">
                    <div class="form-group" data-bind="with: newCompany">
                        
                        

                        <div class="col-md-12">
                            <label for="inputComanyName" class="control-label">Comapny Name</label>
                            <input type="text" class="form-control" id="inputCompanyName" data-bind="value:CompanyName" />
                        </div>
                        <br />
                        
                        <div class="col-md-12">
                            <label for="inputNIPNumber" class="control-label">NIP</label>
                            <input type="text" class="form-control" id="inputNIPNumber" data-bind="value:NIPNumber" />
                        </div>
                        <br />
                        
                        <div class="col-md-12">
